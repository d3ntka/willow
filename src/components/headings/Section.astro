---
interface Props {
  href?: string;
  classes?: string;
  btnText?: string;
  iconCenter?: boolean;
}

import { Icon } from "astro-icon";
import Button from "@buttons/button.astro";
const { classes, href, btnText, iconCenter } = Astro.props;
const iconClass = iconCenter ? "left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2" : "top-0 left-0 -translate-x-1/3 -translate-y-1/4";
---

<div class=`flex max-sm:flex-wrap gap-6 items-center ${classes}`>
  <div class="relative">
    <i
      class=`absolute w-32 h-32 ${iconClass}`
    >
      <Icon name="sun-headings" />
    </i>
    <h2 class="max-w-108 relative">
      <slot>Section Heading</slot>
    </h2>
  </div>
    { href && <Button href={href} classes="sm:ms-auto relative py-2 gap-6" >{btnText}</Button> }
</div>
