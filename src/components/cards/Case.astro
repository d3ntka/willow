---
import { Icon } from "astro-icon";
import Link from "@buttons/link.astro";
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<a
  href={href}
  class="group bg-white border border-gray min-h-[40.5rem] grid items-end p-10 relative transition hover:shadow-lg"
>
  <div
    class="absolute top-0 left-0 h-full w-full [&>*]:w-full [&>*]:h-full [&_img]:img-cover"
  >
    <slot name="background" />
  </div>
  <div class="absolute left-10 top-10 w-12 h-12">
    <Icon name="sun-case" />
  </div>

  <div class="grid gap-5 mt-auto relative">
    <h3 class="text-[1.4375rem] tracking-wider text-white">
      {title}
    </h3>
    <p class="text-gray-100 text-2xs tracking-widest leading-[3] pb-12">
      {body}
    </p>
    <Link classes="text-white"/>
  </div>
</a>
